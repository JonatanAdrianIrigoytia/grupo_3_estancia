<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head.ejs", {style: "form-styles", title: " - Crear cuenta"})%>
	<body>
	<%- include("../partials/header.ejs")%>
		<main>
			<form action="/register" method="POST">
				<div class="form-container">
					<h5>Bienvenido a Las Violetas</h5>
					<label for="name">Nombre</label>
					<input
						class="controls"
						type="text"
						name="name"
						id="name"
						placeholder="Nombre"
						required
					/>
					<label for="lastname">Apellido</label>
					<input
						class="controls"
						type="text"
						name="lastname"
						id="lastname"
						placeholder="Apellido"
						required
					/>
					<label for="email">E-mail</label>
					<input
						class="controls"
						type="email"
						name="email"
						id="email"
						placeholder="E-mail"
						required
					/>
					<label for="password">Contraseña</label>
					<input
						class="controls"
						name="password"
						type="password"
						id="password"
						placeholder="Contraseña"
					/>
					<label for="password2">Confime su contraseña</label>
					<input
						class="controls"
						name="password2"
						type="password"
						id="password2"
						placeholder="Confirme su contraseña"
					/>
					<button class="button" type="submit"><h3>Registrarse</h3></button>
					<button class="button" type="reset"><h3>Cancelar</h3></button>
					<div class="has-account">
						<span>¿Ya tiene una cuenta?</span>
						<a class="has-account-link" href="#">Inicie sesión</a>
					</div>
				</div>
			</form>
		</main>
		<%- include("../partials/footer.ejs")%>
		<%- include("../partials/scripts.ejs")%>
	</body>
</html>
